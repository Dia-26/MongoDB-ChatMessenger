<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'WhatsApp Messages' %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <!-- Header -->
        <header class="header">
            <div class="header-content">
                <div class="logo">
                    <i class="fab fa-whatsapp"></i>
                    <h1>WhatsApp Messages</h1>
                </div>
                <div class="header-actions">
                    <a href="/chats/new" class="btn-new">
                        <i class="fas fa-plus-circle"></i> New Message
                    </a>
                </div>
            </div>
        </header>

        <!-- Stats Bar -->
        <div class="stats-bar">
            <div class="stat">
                <i class="fas fa-comments"></i>
                <span>Total Messages: <strong><%= chats.length %></strong></span>
            </div>
            <div class="stat">
                <i class="fas fa-users"></i>
                <span>Unique Users: <strong id="unique-users">0</strong></span>
            </div>
            <div class="stat">
                <i class="fas fa-clock"></i>
                <span>Latest: <strong id="latest-time">Just now</strong></span>
            </div>
        </div>

        <!-- Messages List -->
        <div class="messages-container">
            <div class="messages-header">
                <h2><i class="fas fa-inbox"></i> All Messages</h2>
                <div class="sort-controls">
                    <select id="sortSelect">
                        <option value="newest">Newest First</option>
                        <option value="oldest">Oldest First</option>
                        <option value="from">By Sender (A-Z)</option>
                    </select>
                </div>
            </div>

            <% if(chats.length > 0) { %>
                <div class="messages-grid" id="messagesGrid">
                    <% chats.forEach(chat => { %>
                        <div class="message-card" data-id="<%= chat._id %>" data-date="<%= chat.created_at.getTime() %>">
                            <div class="message-header">
                                <div class="user-info">
                                    <div class="sender">
                                        <i class="fas fa-user-circle"></i>
                                        <strong><%= chat.from %></strong>
                                        <i class="fas fa-arrow-right"></i>
                                        <i class="fas fa-user-circle"></i>
                                        <strong><%= chat.to %></strong>
                                    </div>
                                    <div class="message-time">
                                        <i class="far fa-clock"></i>
                                        <%= chat.created_at.toLocaleString() %>
                                    </div>
                                </div>
                                <div class="message-actions">
                                    <a href="/chats/<%= chat._id %>" class="btn-view" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="/chats/<%= chat._id %>/edit" class="btn-edit" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button class="btn-delete" data-id="<%= chat._id %>" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                            
                            <div class="message-body">
                                <p class="message-text">
                                    <i class="fas fa-quote-left"></i>
                                    <%= chat.msg %>
                                    <i class="fas fa-quote-right"></i>
                                </p>
                            </div>
                            
                            <div class="message-footer">
                                <div class="message-id">
                                    <small>ID: <%= chat._id.toString().slice(-6) %></small>
                                </div>
                                <div class="message-status">
                                    <span class="status delivered">
                                        <i class="fas fa-check-double"></i> Delivered
                                    </span>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <i class="far fa-comment-slash"></i>
                    <h3>No Messages Yet</h3>
                    <p>Start a conversation by sending your first message!</p>
                    <a href="/chats/new" class="btn-primary">
                        <i class="fas fa-plus-circle"></i> Create First Message
                    </a>
                    <p class="tip">
                        <i class="fas fa-lightbulb"></i> 
                        Run <code>node init.js</code> to load sample messages
                    </p>
                </div>
            <% } %>
        </div>

        <!-- Delete Confirmation Modal -->
        <div id="deleteModal" class="modal">
            <div class="modal-content">
                <h3><i class="fas fa-exclamation-triangle"></i> Delete Message</h3>
                <p>Are you sure you want to delete this message? This action cannot be undone.</p>
                <div class="modal-actions">
                    <button id="cancelDelete" class="btn-secondary">Cancel</button>
                    <button id="confirmDelete" class="btn-danger">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Calculate unique users
            const users = new Set();
            document.querySelectorAll('.message-card').forEach(card => {
                const from = card.querySelector('.sender strong:nth-child(2)').textContent;
                const to = card.querySelector('.sender strong:nth-child(5)').textContent;
                users.add(from);
                users.add(to);
            });
            document.getElementById('unique-users').textContent = users.size;

            // Set latest time
            const messages = document.querySelectorAll('.message-card');
            if (messages.length > 0) {
                const latestTime = messages[0].querySelector('.message-time').textContent;
                document.getElementById('latest-time').textContent = latestTime;
            }

            // Delete functionality
            let chatToDelete = null;
            
            document.querySelectorAll('.btn-delete').forEach(btn => {
                btn.addEventListener('click', function() {
                    chatToDelete = this.dataset.id;
                    document.getElementById('deleteModal').style.display = 'flex';
                });
            });

            document.getElementById('cancelDelete').addEventListener('click', function() {
                document.getElementById('deleteModal').style.display = 'none';
                chatToDelete = null;
            });

            document.getElementById('confirmDelete').addEventListener('click', async function() {
                if (!chatToDelete) return;
                
                try {
                    const response = await fetch(`/chats/${chatToDelete}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        // Remove message card from UI
                        const card = document.querySelector(`[data-id="${chatToDelete}"]`);
                        card.style.opacity = '0';
                        card.style.transform = 'scale(0.9)';
                        
                        setTimeout(() => {
                            card.remove();
                            document.getElementById('deleteModal').style.display = 'none';
                            chatToDelete = null;
                            
                            // Update stats
                            const totalMessages = document.querySelectorAll('.message-card').length;
                            document.querySelector('.stat strong').textContent = totalMessages;
                            
                            if (totalMessages === 0) {
                                location.reload();
                            }
                        }, 300);
                    } else {
                        alert('Failed to delete message: ' + result.message);
                        document.getElementById('deleteModal').style.display = 'none';
                    }
                } catch (error) {
                    alert('Error deleting message');
                    console.error(error);
                    document.getElementById('deleteModal').style.display = 'none';
                }
            });

            // Sort functionality
            document.getElementById('sortSelect').addEventListener('change', function() {
                const messagesGrid = document.getElementById('messagesGrid');
                const messages = Array.from(document.querySelectorAll('.message-card'));
                
                messages.sort((a, b) => {
                    const aDate = parseInt(a.dataset.date);
                    const bDate = parseInt(b.dataset.date);
                    
                    switch(this.value) {
                        case 'newest':
                            return bDate - aDate;
                        case 'oldest':
                            return aDate - bDate;
                        case 'from':
                            const aFrom = a.querySelector('.sender strong:nth-child(2)').textContent;
                            const bFrom = b.querySelector('.sender strong:nth-child(2)').textContent;
                            return aFrom.localeCompare(bFrom);
                        default:
                            return 0;
                    }
                });
                
                // Reappend in sorted order
                messages.forEach(msg => messagesGrid.appendChild(msg));
            });

            // Close modal on outside click
            window.addEventListener('click', function(event) {
                const modal = document.getElementById('deleteModal');
                if (event.target === modal) {
                    modal.style.display = 'none';
                    chatToDelete = null;
                }
            });
        });
    </script>
</body>
</html>