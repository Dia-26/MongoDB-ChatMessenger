<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Edit Message' %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <!-- Header -->
        <header class="header">
            <div class="header-content">
                <div class="logo">
                    <a href="/" class="back-link">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                    <div>
                        <h1>Edit Message</h1>
                        <p class="subtitle">Update your WhatsApp message</p>
                    </div>
                </div>
                <div class="message-info">
                    <small>
                        <i class="far fa-clock"></i> 
                        Created: <%= chat.created_at.toLocaleString() %>
                    </small>
                    <small>
                        <i class="fas fa-fingerprint"></i> 
                        ID: <%= chat._id.toString().slice(-8) %>
                    </small>
                </div>
            </div>
        </header>

        <div class="form-container">
            <form action="/chats/<%= chat._id %>?_method=PUT" method="POST" class="chat-form">
                <div class="form-group">
                    <label for="from">
                        <i class="fas fa-user"></i> From
                    </label>
                    <input type="text" id="from" name="from" required 
                           value="<%= chat.from %>">
                </div>

                <div class="form-group">
                    <label for="to">
                        <i class="fas fa-user-friends"></i> To
                    </label>
                    <input type="text" id="to" name="to" required 
                           value="<%= chat.to %>">
                </div>

                <div class="form-group">
                    <label for="msg">
                        <i class="fas fa-comment-dots"></i> Message
                    </label>
                    <textarea id="msg" name="msg" required 
                              maxlength="500" 
                              rows="4"><%= chat.msg %></textarea>
                    <div class="char-counter">
                        <span id="charCount"><%= chat.msg.length %></span>/500 characters
                    </div>
                </div>

                <div class="form-actions">
                    <a href="/" class="btn-cancel">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                    <button type="submit" class="btn-submit">
                        <i class="fas fa-save"></i> Update Message
                    </button>
                </div>
            </form>

            <!-- Original Message Preview -->
            <div class="original-preview">
                <h3><i class="fas fa-history"></i> Original Message</h3>
                <div class="preview-card">
                    <div class="preview-header">
                        <div class="preview-direction">
                            <span class="preview-from">
                                <i class="fas fa-user"></i> <%= chat.from %>
                            </span>
                            <i class="fas fa-arrow-right"></i>
                            <span class="preview-to">
                                <i class="fas fa-user-friends"></i> <%= chat.to %>
                            </span>
                        </div>
                        <div class="preview-time">
                            <i class="far fa-clock"></i> 
                            <%= chat.created_at.toLocaleString() %>
                        </div>
                    </div>
                    <p class="preview-message">
                        <i class="fas fa-quote-left"></i>
                        <%= chat.msg %>
                        <i class="fas fa-quote-right"></i>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Character counter
            const textarea = document.getElementById('msg');
            const charCount = document.getElementById('charCount');
            
            textarea.addEventListener('input', function() {
                charCount.textContent = this.value.length;
                if (this.value.length > 450) {
                    charCount.style.color = '#ff4757';
                } else if (this.value.length > 400) {
                    charCount.style.color = '#ffa502';
                } else {
                    charCount.style.color = '#2ed573';
                }
            });

            // Auto-focus first input
            document.getElementById('from').focus();
        });
    </script>
</body>
</html>